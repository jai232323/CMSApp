<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".Students.StudentRegisterActivity">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="vertical">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/RegisterStudentImage"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:src="@drawable/student_add_icon"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1.8"
                android:layout_marginTop="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Set Your Image"
                android:textColor="@color/red"
                android:gravity="center"
                android:layout_weight="0.2"
                android:layout_marginBottom="10dp"
                android:textSize="20dp"
                android:textStyle="bold"/>
        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>





    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Student Name..."
            android:id="@+id/RegisterStudentName"/>

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Student Email..."
            android:id="@+id/RegisterStudentEmail"/>

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Student Password..."
            android:inputType="textPassword"
            android:id="@+id/RegisterStudentPassword"/>

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_marginTop="10dp"
        android:textAllCaps="false"
        android:textColor="@color/bluecolor"
        android:textSize="20sp"
        app:strokeColor="@color/bluecolor"
        android:fontFamily="@font/montserrat"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:id="@+id/RegisterLoginBtn"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an account ? Login"
        android:textSize="18sp"
        android:id="@+id/Register_txt_signup"
        android:textColor="@color/bluecolor"
        android:layout_gravity="center"
        android:fontFamily="@font/montserrat"
        android:layout_marginTop="10dp" />

</LinearLayout>